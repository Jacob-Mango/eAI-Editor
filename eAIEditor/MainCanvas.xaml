<Window x:Class="eAIEditor.MainCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eAIEditor"
        mc:Ignorable="d"
        Title="MainCanvas" Height="450" Width="800">
    <Window.Resources>
        <ContextMenu x:Key="MainCtxMenu">
            <MenuItem  Header="Add Node"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Canvas MouseDown="Canvas_MouseDown" MouseRightButtonDown="Canvas_MouseRightButtonDown" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
